<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.user_manager_service.dao.AdditionalPointDao" >

    <insert id="createAdditionalPoint" parameterType="com.model.AdditionalPointVO">
        INSERT INTO additional_point
        (admin_id,user_id,quarter,points,category,comment)
        VALUES
        (#{adminId},#{userId},#{quarter},#{points},#{category},#{comment})
    </insert>

    <select id="getUserAdditionalPoints" resultType="com.model.AdditionalPointVO">
        SELECT *
        FROM additional_point
        <where>
            <if test="userId != null">
                user_id = #{userId}
            </if>
            <if test="year != null">
                AND extract(year from created_at) = #{year}
            </if>
            <if test="quarters != null">
                AND quarter IN
                <foreach item="quarter" index="index" collection="quarters" open="(" separator="," close=")">
                    #{quarter}
                </foreach>
            </if>
        </where>
        GROUP BY additional_point_id,quarter ORDER BY created_at DESC
    </select>




</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.user_manager_service.dao.UserManagerDao" >

    <insert id="createUserManagerRecord" parameterType="com.model.UserManagerVO">
        INSERT INTO user_manager
        (manager_id,user_id)
        VALUES
        (#{managerId},#{userId})
    </insert>

    <select id="getGravitateUsersByManagerId" parameterType="Long" resultType="com.model.UserVO" >
        SELECT * FROM app_user P
        FULL JOIN
        use_manager Q ON
        P.user_id = Q.user_id
        WHERE Q.manager_id = #{managerId}
    </select>





</mapper>